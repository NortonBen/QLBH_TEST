<div class="login">

    <div class="main-agileits">
        <div class="form-w3agile">
            <h3>Login</h3>
            <form  method="post">
               @Html.AntiForgeryToken()
               @if (TempData["error"] != null)
               {
                   foreach (var item in (Array)TempData["error"])
                   {
                        <p>@item</p>
                   }
               }
               
                <div class="key">
                    <i class="fa  fa-user" aria-hidden="true"></i>
                    <input type="text" name="username" required="" placeholder="Username" style="  width: 88%;">
                    <div class="clearfix"></div>
                </div>
                <div class="key">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input type="password" name="Password" required="" placeholder="Password">
                    <div class="clearfix"></div>
                </div>
                <input type="submit" value="Login">
            </form>
        </div>
        <div class="forg">
            <a href="@Url.Action("register","Home")" class="forg-right">Register</a>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
